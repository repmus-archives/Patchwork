;;;  ORCHESTRA FILE FOR;;;  MULTIPLE VOICE SOUNDFILE GRANULATION;;;  Mono input, stereo output version ;;;  d'après CURTIS ROADS - July 1993sr = 44100kr = 22050ksmps = 2nchnls = 2	instr 1        ; p3 = duration		; p4 = Soundfile number, 		; p5 = Time of input file to skip into		; p6 = Amplitude		; p7 = Location;************* enveloppe	 	k1 		oscil1i 	0, 1, p3, 1 	k1 		=              	p6 * k1	;********** sounfile lecture	    ason 	soundin 	p4, p5;************* mix		outs ason * p7,  ason * (1-p7)           ; Scale by 1/12	 	  endin